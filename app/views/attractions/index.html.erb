<div class="container"  role="main">
      <h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>

<% @attractions.each do |a| %>
      <tr>
        <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
        <td><%=a.name%></td>
        <td><%=a.tickets%></td>
        <% if current_user.try(:admin?) %>
          <td><a href="/attractions/<%=a.id%>">Show <%=a.name%></a></td>
        <% else %>
          <td><a href="/attractions/<%=a.id%>">Go on <%=a.name%></a></td>
        <% end %>
      </tr>
<% end %>
  </tbody>
</table>
<br>

<% if current_user.try(:admin?) %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>