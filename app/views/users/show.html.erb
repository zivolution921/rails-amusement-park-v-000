<div class="center">
  <div class="pic">
    <%= image_tag("http://8900-presscdn-0-84.pagely.netdna-cdn.com/wp-content/themes/beautycon/assets/img/avatar-grey.png", height: '250')  %>
  </div>
  <div class="info">
    <% if @user.admin %>
      <p><%= content_tag(:strong, "ADMIN")%></p>
    <% end %>
    
    <p><%= content_tag(:strong, "Name:") %> <%= @user.name %></p>
    <p><%= content_tag(:strong, "Tickets:") %> <%= @user.tickets %></p>
    <p><%= content_tag(:strong, "Mood:") %> <%= @user.mood %></p>
    <p><%= content_tag(:strong, "Height:") %> <%= @user.height %> inches</p>

    <p><%= @user_message %></p>
    
    <p><%= link_to "Edit", edit_user_path %></p>
    <p><%= link_to "See attractions", attractions_path %></p>
  </div>
</div>